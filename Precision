
#include <iostream>
#include <boost/multiprecision/cpp_dec_float.hpp>

using boost::multiprecision::cpp_dec_float_100;
using namespace std;


int Surf(int raduis, int lenght);
int getTotal(int Surf);

int Surf(int raduis, int lenght)
{
    int surfarea;

    surfarea = (raduis * raduis * lenght);

    cout << "Surface area of barrel: " << surfarea << endl;
    return surfarea;
}


int getTotal(int Surf)
{
    double pi = 2 * acos(0.0);
    float volume;
    volume = Surf * pi;

    cout << "Total volume of barrel: " << volume << endl;
    return volume;
}

int main()
{
    int raduis;
    int length;

    cout << "\n\n Calculate the volume of a cylinder :\n";
    cout << "-----------------------------------------\n";
    cout << " Input the radius of the cylinder : ";
    cin >> raduis;
    cout << " Input the height of the cylinder : ";
    cin >> length;

    
     int rfinal = Surf(raduis, length);

     std::cout
     << std::setprecision(std::numeric_limits<cpp_dec_float_100>::digits10)
     << getTotal(rfinal)
     << std::endl;
    
    cout << endl;

    return 0;
}
