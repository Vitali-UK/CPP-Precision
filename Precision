
#include <iostream>
#include <boost/multiprecision/cpp_dec_float.hpp>

using boost::multiprecision::cpp_dec_float_100;
using namespace std;


int Surf(int raduis);
int getTotal(int Surf, int height);

int Surf(int raduis )
{
    int surfarea;
    double pi = 3.14159265359;
    surfarea = (pi*(raduis * raduis) );

    cout << "Surface area of barrel: " << surfarea << endl;
    return surfarea;
}


int getTotal(int Surf, int height)
{
    
    double volume;
    volume = Surf * height;

    cout << "Total volume of barrel: " << volume << endl;
    return volume;
}

int main()
{
    int raduis;
    int height;

    cout << "\n\n Calculate the volume of a cylinder :\n";
    cout << "-----------------------------------------\n";
    cout << " Input the radius of the cylinder : ";
    cin >> raduis;
    cout << " Input the height of the cylinder : ";
    cin >> height;

    
     int rfinal = Surf(raduis);

     std::cout
     << std::setprecision(std::numeric_limits<cpp_dec_float_100>::digits10)
     << getTotal(rfinal,height)
     << std::endl;
    
    cout << endl;

    return 0;
}
